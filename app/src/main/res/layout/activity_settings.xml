<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/wallpaper"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50.0dip"
        android:layout_marginTop="10.0dip">

        <TextView
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="30.0sp"
            android:textStyle="bold"
            android:textColor="#ffe91f12"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Settings"
            android:shadowColor="#ff000000"
            android:shadowDx="5.0"
            android:shadowDy="5.0"
            android:shadowRadius="5.0"/>

    </LinearLayout>

    <ScrollView
        android:padding="20.0dip"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10.0dip">

                <TextView
                    android:textAppearance="?android:textAppearanceLarge"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:text="Root Mode"
                    android:layout_weight="5.0"/>

                <Switch
                    android:id="@+id/setMode"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="5.0"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10.0dip">

                <TextView
                    android:textAppearance="?android:textAppearanceLarge"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:text="No. of Loco Applications"
                    android:layout_weight="5.0"/>

                <EditText
                    android:gravity="center"
                    android:id="@+id/noLocoApps"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:layout_weight="1.0"
                    android:inputType="number"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10.0dip">

                <TextView
                    android:textAppearance="?android:textAppearanceLarge"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:text="Auto Watching"
                    android:layout_weight="8.0"/>

                <Button
                    android:id="@+id/AutoWatchingBtn"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:text="START"
                    android:layout_weight="4.0"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10.0dip">

                <TextView
                    android:textAppearance="?android:textAppearanceLarge"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:text="Auto Watching Status"
                    android:layout_weight="8.0"/>

                <Button
                    android:id="@+id/AutoWatchingStatusBtn"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.0"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>

